+import { Resend } from 'resend';
+
+export const onRequestPost = async ({ request, env }) => {
+  const form = await request.formData();
+
+  // Honeypot (optional)
+  if ((form.get('company') || '').toString().trim() !== '')
+    return new Response('Spam detected', { status: 400 });
+
+  // Cloudflare Turnstile verification (optional but recommended)
+  const token = form.get('cf-turnstile-response');
+  if (token) {
+    const verify = await fetch('https://challenges.cloudflare.com/turnstile/v0/siteverify', {
+      method: 'POST',
+      body: new URLSearchParams({ secret: env.TURNSTILE_SECRET, response: token })
+    }).then(r => r.json());
+    if (!verify.success) return new Response('Turnstile verification failed', { status: 400 });
+  }
+
+  const name = (form.get('name') || '').toString().trim();
+  const email = (form.get('email') || '').toString().trim();
+  const message = (form.get('message') || '').toString().trim();
+  if (!name || !email || !message) return new Response('Missing fields', { status: 400 });
+
+  try {
+    const resend = new Resend(env.RESEND_API_KEY);
+    const { error } = await resend.emails.send({
+      from: 'webform@ontarix.ca',
+      to: ['info@ontarix.ca'],
+      reply_to: email,
+      subject: `ontarix.ca contact — ${name}`,
+      html: `<p><strong>From:</strong> ${name} &lt;${email}&gt;</p><p>${message.replace(/
+/g,'<br>')}</p>`
+    });
+    if (error) throw new Error(String(error));
+    return new Response('Thank you! Your message has been sent.', { status: 200 });
+  } catch (e) {
+    return new Response('Email sending failed', { status: 500 });
+  }
+};
